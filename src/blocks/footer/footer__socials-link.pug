mixin footer__socials-link(options)
  -
    const className = options.class
    const iconClassName = `${options.class}-icon`
    const iconFill = options.fill || 'url(#linear-purple-gradient)'
    const icon = options.icon
    const iconWidth = options.width || 22
    const iconHeight = options.height || 22

  a(class=className href='/mock-address/change-me' target='_blank' rel='noopener noreferrer')
    svg(class=iconClassName width=iconWidth height=iconHeight viewBox=`0 0 ${iconWidth} ${iconHeight}` alt='tw-link')
      path(fill=iconFill d=icon)