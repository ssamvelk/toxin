mixin slider(options)
  - const title = options.title || 'диапазон цены'
  
  .slider__wrapper
    .slider__info-wrapper
      h3.slider__info-title #{title}
      p.slider__info <span id='js-range-start'>5 000</span>₽ - <span id='js-range-end'>10 000</span>₽
    .slider#slider
    p.slider__info Стоимость за сутки пребывания в номере