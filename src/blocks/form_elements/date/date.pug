mixin filter-date-dropdown(options)
    .date-wrp
        <svg class="date-dropdawn__svg" width="12" height="12" viewBox="0 -4 12 12"  version="1.1" preserveAspectRatio="xMinYMin">
        <use xlink:href="#img-expand-more"></use>   
        </svg>
        p.date__info
            span.date__info-start 19 авг 
            |- 
            span.date__info-end 23 авг

mixin date-seach-filds(options)
    .date__seach-wrp
        //-h2 Въезд    
        .date-wrp.date-wrp--w150
            <svg class="date-dropdawn__svg" width="12" height="12" viewBox="0 -4 12 12"  version="1.1" preserveAspectRatio="xMinYMin">
            <use xlink:href="#img-expand-more"></use>   
            </svg>
            +text_field({type:'date', class:'date__info'})
            
            //-h2 Выезд    
        .date-wrp.date-wrp--w150
            <svg class="date-dropdawn__svg" width="12" height="12" viewBox="0 -4 12 12"  version="1.1" preserveAspectRatio="xMinYMin">
            <use xlink:href="#img-expand-more"></use>   
            </svg>
            +text_field({type:'date', class:'date__info'})

