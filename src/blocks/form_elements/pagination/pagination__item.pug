mixin pagination__item(options)
  -
    const isFirst = options.first ? 'pagination__item_first' : ''
    const isLast = options.last ? 'pagination__item_last' : ''
    const isActive = options.active ? 'pagination__item_active' : ''
    const text = options.text || ''

  li(class=`pagination__item ${isFirst} ${isLast} ${isActive}`)
    a(class='pagination__item-link' href='/mock-address/change-me')= text
    if (isFirst || isLast)
      svg(class='pagination__arrow' width='18' height='18' viewBox='0 0 18 18'  version='1.1' preserveAspectRatio='xMinYMin')
        use(xlink:href='#img-arrow-right')