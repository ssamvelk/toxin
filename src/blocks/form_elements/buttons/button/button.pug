mixin button(options)
  -
    const size = options.size ? `button_size_${options.size}` : ''
    const isWhite = options.white ? ' button_white' : ''
    const text = options.text || 'click me'
    const href = options.href || '/mock-address/change-me'
   
  if (options.size === 'big')
    a(class=`button ${size}` href=href)
      span(class='button__text')=text
      svg(class='button__arrow' width='18' height='18' viewBox='0 0 18 18'  version='1.1' preserveAspectRatio='xMinYMin')
        use(xlink:href='#img-arrow-right')
  else
    a(class=`button ${isWhite} ${size}` href=href)
      span(class='button__text')=text