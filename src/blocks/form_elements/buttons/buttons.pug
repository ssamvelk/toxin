mixin button(options)
    -var isBig = (options.Big)? ' button--big' : '',
    -w196 = (options.w196) ? ' button--w196' : '',
    -w87 = (options.w87) ? ' button--w87' : '',
    -isWhite = (options.White)? ' button--white' : '',
    -text = (options.text)? options.text : 'перейти к оплате',
    -text2 = (options.text)? options.text : 'click me',
    -href = (options.href)? options.href : '' 
    if (options.Big)
        a(class='button'+isBig+w196+w87 href=href)
            span=text
            <svg class="btn-arrow-svg" width="18" height="18" viewBox="0 0 18 18"  version="1.1" preserveAspectRatio="xMinYMin">
            <use xlink:href="#img-arrow-right"></use>   
            </svg>
    else
        a(class='button'+isBig+isWhite+w196+w87 href=href)
            span=text2
            



            
    