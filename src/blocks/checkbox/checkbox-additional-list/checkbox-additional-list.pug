include ../checkbox/checkbox.pug

mixin checkbox-additional-list(options)
  -
    const {
      title = 'дополнительные удобства',
      opened = false,
      items = ['Завтрак', 'Письменный стол', 'Стул для кормления', 'Кроватка', 'Телевизор', 'Шампунь'],
      checkedItems = [1,2,3]
      } = options
  
  .checkbox-additional-list.js-checkbox-additional-list
    .checkbox-additional-list__header
      h3.checkbox-additional-list__title= title
      svg(class=`checkbox-additional-list__arrow ${opened ? 'checkbox-additional-list__arrow_opened' : ''}` width='12' height='12' viewBox='0 -4 12 12'  version='1.1' preserveAspectRatio='xMinYMin')
        use(xlink:href='#img-expand-more')   
    div(class=`checkbox-additional-list__body ${opened ? '' : 'checkbox-additional-list__body_disabled'}`)
      each item, index in items
        .checkbox-additional-list__checkbox
          +checkbox({text: item, checked: checkedItems.includes(index)})