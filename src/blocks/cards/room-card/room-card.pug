include ../../form_elements/carousel/carousel.pug
include ../../form_elements/rate/rate.pug

mixin room-card(options)
  -
    const bg = ['../../static/source/room_1.jpg', '../../static/source/room_2.jpg','../../static/source/room_3.jpg', '../../static/source/room_4.jpg']
    const imageBG = options.bg || bg[0]
    const href = options.href || 'room-details.html'
    const isArrows = options.arrows ? true : false
    const roomRating = options.rating || '5'                
    const roomNumder = options.number || '888'              
    const roomNotLux = options.notlux ? '' : 'люкс'                         
    const roomCost = options.cost ? `${options.cost}₽` : '9 999₽'
    const roomLikesNum = options.likes || '145'
  
  .room-card
    .room-card__image-wrapper
      img.room-card__image.js-room-card__image(width='270' height='151' src=imageBG alt='bg')
      if (isArrows)
        svg(class='room-card__image-prev' width='12' height='12' viewBox='0 -4 12 12'  version='1.1' preserveAspectRatio='xMinYMin')
          use(xlink:href='#img-expand-more-right')

        svg(class='room-card__image-next' width='12' height='12' viewBox='0 -4 12 12'  version='1.1' preserveAspectRatio='xMinYMin')
          use(xlink:href='#img-expand-more-right')

      .room-card__carousel
        +carousel

    .room-card__info
      a(class='room-card__room-link' href=href)
        span.room-card__symbol №
        span.room-card__room-number=` ${roomNumder}`
      span.room-card__symbol.room-card__room-type=roomNotLux 
      span.room-card__room-cost
        b=roomCost
        
    .room-card__rating
      +rate({rating: roomRating, isClickable: false}) 
      span.room-card__rating-count=`${roomLikesNum} Отзывов`