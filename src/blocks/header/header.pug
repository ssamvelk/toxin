include ../buttons/button/button.pug
include ../logo/logo.pug
include ../navigation/navigation.pug

mixin header(options)
  -
    const {
      authorized = false,
      name = 'Cosmin Negoita',
      activeLink = 1
    } = options
    const isAuthorized = options.authorized ? 'header__inner-wrapper_authorized' : ''

  header.header
    div(class=`header__inner-wrapper ${isAuthorized}`)
      
      a.header__logotype(href='main.html')
        +logo()

      .header__navigation
        +navigation({})
      
      .header__authorization
        .header__inter
          +button({size: 'small', theme: 'white', text: 'войти', href: 'sign-in.html'})
        .header__registration
          +button({size: 'middle', text: 'зарегистрироваться',  href: 'registration.html'})
      
      span.header__user= name