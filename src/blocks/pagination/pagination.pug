include ./item/item.pug

mixin pagination(options)
  .pagination
    ul.pagination__list
      +item({initial: true, active: true, text: 1})
      +item({text: 2})
      +item({text: 3})
      +item({text: '...'})
      +item({text: 15})
      +item({final: true})
    p.pagination__footer
      span.pagination__current-page 1
      = ` – 12 из ` 
      span.pagination__all-pages 100+
      = ` вариантов аренды`