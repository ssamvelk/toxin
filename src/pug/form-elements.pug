<!DOCTYPE html>
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    meta(http-equiv="X-UA-Compatible", content="ie=edge")
    meta(name="keywords" content="Toxin, отель, отдых")
    meta(name="description" content="Toxin - Лучшие номера для вашей работы, отдыха и просто вдохновения.")
    link(rel="icon", href="img/favicon.ico" type="image/ico")
    title Form Elements
  body
    main.form-elements__wrap
      .form-elements__inner-wrap

        section.form-elements__section.form-elements__section-1
          .form-elements__col
            div.form-elements__item
              h6.form-elements__items-tytle text Field
              +text_field({type: 'email'})
            
            div.form-elements__item 
              h6.form-elements__items-tytle text Field
              +text_field({type: 'text', placeholder: 'This is pretty awesome'})
            
            div.form-elements__item 
              h6.form-elements__items-tytle dropdown
              +dropdownCompany({})
            
            div.form-elements__item 
              h6.form-elements__items-tytle masked text field
              +text_field({type: 'date'})
            
            div.form-elements__item 
              //- h6.form-elements__items-tytle date Dropdown
              +date-search-filds({tytle1: 'date Dropdown',  tytle2: 'date Dropdown'})
            
            div.form-elements__item 
              h6.form-elements__items-tytle filter date dropdown
              +filter-date-dropdown({})
            
            div.form-elements__item 
              h6.form-elements__items-tytle subscription text field
              +subscribe({})

          .form-elements__col
            div.form-elements__item
              
              +checkbox-list({})
            
            div.form-elements__item
              h6.form-elements__items-tytle Radio Buttons
              +radio({})
            
            div.form-elements__item
              h6.form-elements__items-tytle toggle
              +toggle({checked: true})
              +toggle({})
            
            div.form-elements__item
              h6.form-elements__items-tytle like button
              +like({value: 2})
              +like({liked: true, value: 12})

            div.form-elements__item
              h6.form-elements__items-tytle rate button
              +rate({rating: 4})
              +rate({rating: 5})

          .form-elements__col
            div.form-elements__item
              //- h6.form-elements__items-tytle Range Slider
              +slider({})

            div.form-elements__item
              h6.form-elements__items-tytle buttons
              .form-elements__flex-wrap
                +button({})
                +button({})
              br
              .form-elements__flex-wrap
                +button({white:true})
                +button({white:true})
              br
              .form-elements__flex-wrap
                +emptybutton({})
                +emptybutton({text: 'click me'})
              br
              .form-elements__flex-wrap
                +button({big: true})

            .form-elements__col
            div.form-elements__item
              h6.form-elements__items-tytle pagination
              +pagination({})
       
        section.form-elements__section.form-elements__section-2
          .form-elements__col
            div.form-elements__item
              h6.form-elements__items-tytle dropdown
              +dropdown({})
              h6.form-elements__items-tytle dropdown
              +dropdown({expanded: true, count1: 2, count2: 2})
              
          .form-elements__col
            div.form-elements__item
              h6.form-elements__items-tytle dropdown
              .form-elements__flex-wrap
                +dropdownCompany({})

          .form-elements__col
            div.form-elements__item
              h6.form-elements__items-tytle dropdown
              .form-elements__flex-wrap
                +dropdownCompany({expanded: true, count1: 2, count2: 1})
        
        section.form-elements__section.form-elements__section-3
          .form-elements__col
            div.form-elements__item
              //- h6.form-elements__items-tytle dropdown
              +checkbox-additional-list({})

            div.form-elements__item
              +checkbox-additional-list({opened: true})
              
          .form-elements__col
            div.form-elements__item
              +checkbox-accessibility({})

          .form-elements__col
            div.form-elements__item
              +bullet({})

        section.form-elements__section.form-elements__section-4
          .form-elements__col
            div.form-elements__item
              //- h6.form-elements__items-tytle dropdown
              +room_info()

          .form-elements__col
            div.form-elements__item
              //- h6.form-elements__items-tytle dropdown
              +comment({})
      