include ../blocks/form_elements/radio/radio.pug
include ../blocks/form_elements/toggle/toggle.pug
include ../blocks/form_elements/like/like.pug
include ../blocks/form_elements/rate/rate.pug
include ../blocks/form_elements/slider/slider.pug
include ../blocks/form_elements/buttons/buttons.pug
