extends ../base.pug
block title
  title Form Elements
block content
  include ../../static/sprite.svg
  include ../../blocks/form_elements/text-field/text-field.pug
  include ../../blocks/form_elements/dropdown/dropdown.pug
  include ../../blocks/form_elements/date-filter/date-filter.pug
  include ../../blocks/form_elements/date-dropdown/date-dropdown.pug
  include ../../blocks/form_elements/checkbox/checkbox.pug
  include ../../blocks/form_elements/checkbox/checkbox-accessibility/checkbox-accessibility.pug
  include ../../blocks/form_elements/checkbox/checkbox-additional-list/checkbox-additional-list.pug
  include ../../blocks/form_elements/checkbox/checkbox-list/checkbox-list.pug
  include ../../blocks/form_elements/radio/radio.pug
  include ../../blocks/form_elements/toggle/toggle.pug
  include ../../blocks/form_elements/like/like.pug
  include ../../blocks/form_elements/rate/rate.pug
  include ../../blocks/form_elements/slider/slider.pug
  include ../../blocks/form_elements/buttons/button/button.pug
  include ../../blocks/form_elements/buttons/empty-button/empty-button.pug
  include ../../blocks/form_elements/pagination/pagination.pug
  include ../../blocks/form_elements/bullet/bullet.pug
  include ../../blocks/form_elements/comment/comment.pug
  include ../../blocks/form_elements/room-info/room-info.pug
  include ../../blocks/form_elements/subscribe/subscribe.pug
  body
    main.form-elements__wrapper
      img.form-elements__logo(src='../../static/source/logo-gray.png' alt='logo' width=48 height=48)
      .form-elements__inner-wrapper

        section.form-elements__section.form-elements__section_elements
          .form-elements__column.form-elements__column_textfields
            .form-elements__text-field-default-wrap
              h6.form-elements__items-title text Field
              +text-field({type: 'email'})
            
            .form-elements__text-field-hover-wrap
              h6.form-elements__items-title.form-elements__text-field-hover-title text Field
              +text-field({type: 'text', placeholder: 'This is pretty awesome'})
            
            .form-elements__upper-dropdown-company-wrap 
              h6.form-elements__items-title dropdown
              +dropdown-company({big: true})
            
            .form-elements__masked-text-field-wrap
              h6.form-elements__items-title masked text field
              +text-field({type: 'date'})
            
            .form-elements__date-filter-wrap
              +date-filter({arrival: 'date Dropdown',  departure: 'date Dropdown'})
             
            .form-elements__filter-date-dropdown-wrap
              h6.form-elements__items-title filter date dropdown
              +date-dropdown({})
             
            .form-elements__subscribe-wrap
              h6.form-elements__items-title subscription text field
              +subscribe({big: true})

          .form-elements__column.form-elements__column_checkboxs
            .form-elements__checkbox-list-wrap
              +checkbox-list({})
            
            .form-elements__radio-wrap  
              h6.form-elements__items-title Radio Buttons
              .form-elements__radio-element-wrap
                +radio({})
                        
            .form-elements__toggle-wrap  
              h6.form-elements__items-title toggle
              .form-elements__toggle-element-wrap 
                +toggle({checked: true})
              .form-elements__toggle-element-wrap.form-elements__toggle-element-wrap_second-el
                +toggle({})
            
            .form-elements__like-wrap
              h6.form-elements__items-title like button
              .form-elements__like-elements-wrap 
                .form-elements__like-element-wrap 
                  +like({value: 2})
                +like({liked: true, value: 12})

            
            .form-elements__rate-wrap
              h6.form-elements__items-title rate button
              .form-elements__rate-elements-wrap
                .form-elements__rate-element-wrap
                  +rate({rating: 4})
                +rate({rating: 5})

          .form-elements__column
            .form-elements__slider-wrap
              +slider({title : 'Range Slider'})

            .form-elements__buttons-wrap
              h6.form-elements__items-title buttons
              .form-elements__blue-buttons-wrap
                .form-elements__blue-button-wrap
                  +button({})
                +button({})

              .form-elements__white-buttons-wrap
                .form-elements__white-button-wrap
                  +button({white:true})
                +button({white:true})
              
              .form-elements__emptybuttons-wrap 
                +empty-button({})
                +empty-button({text: 'click me'})

              .form-elements__big-button-wrap
                +button({big: true})
            
            .form-elements__pagination-wrap
              h6.form-elements__items-title.form-elements__pagination-title pagination
              +pagination({})
       
        section.form-elements__section.form-elements__section_dropdowns
          .form-elements__column
            .form-elements__dropdowns-wrap
              h6.form-elements__items-title.form-elements__dropdowns-title dropdown
              +dropdown-comfort({small: true, count1: 2, count2: 2})
              .form-elements__dropdown-wrap
                h6.form-elements__items-title dropdown
                +dropdown-comfort({expanded: true, small: true, count1: 2, count2: 2})
              
          .form-elements__column
            .form-elements__dropdown-company-wrap  
              h6.form-elements__items-title dropdown
              +dropdown-company({big: true, expanded: true})

          .form-elements__column
            .form-elements__dropdown-company-filled-wrap
              h6.form-elements__items-title.form-elements__dropdown-company-filled-title dropdown
              +dropdown-company({big: true, expanded: true, count1: 2, count2: 1, text: '3 гостя'})
        
        section.form-elements__section.form-elements__section_checkboxs
          .form-elements__column
            .form-elements__checkbox-additional-list-wrap
              +checkbox-additional-list({title: 'expandable checkbox list'})

            .form-elements__opened-checkbox-additional-list-wrap
              +checkbox-additional-list({opened: true, title: 'expandable checkbox list'})
              
          .form-elements__column
            .form-elements__checkbox-accessibility-wrap
              +checkbox-accessibility({title: 'Rich Checkbox Buttons'})

          .form-elements__column
            .form-elements__bullet-wrap
              +bullet({})

        section.form-elements__section.form-elements__section_rest
          .form-elements__column
            +room-info({num: 2})

          .form-elements__column
            .form-elements__comment-wrap
              +comment({})
      