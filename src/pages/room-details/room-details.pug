extends ../base.pug
block title
  title Room details
block content
  include ../../static/sprite.svg
  include ../../blocks/form-elements/text-field/text-field.pug
  include ../../blocks/form-elements/dropdown/dropdown.pug
  include ../../blocks/form-elements/date-filter/date-filter.pug
  include ../../blocks/form-elements/checkbox/checkbox/checkbox.pug
  include ../../blocks/form-elements/radio/radio.pug
  include ../../blocks/form-elements/toggle/toggle.pug
  include ../../blocks/form-elements/like/like.pug
  include ../../blocks/form-elements/comment/comment.pug
  include ../../blocks/form-elements/rate/rate.pug
  include ../../blocks/form-elements/slider/slider.pug
  include ../../blocks/form-elements/buttons/button/button.pug
  include ../../blocks/form-elements/pagination/pagination.pug
  include ../../blocks/form-elements/bullet/bullet.pug
  include ../../blocks/form-elements/room-info/room-info.pug
  include ../../blocks/cards/search-card/search-card.pug
  include ../../blocks/cards/registration-card/registration-card.pug
  include ../../blocks/cards/reserve-card/reserve-card.pug
  include ../../blocks/cards/inter-card/inter-card.pug
  include ../../blocks/cards/room-card/room-card.pug
  include ../../blocks/header/header.pug
  include ../../blocks/footer/footer.pug
  include ../../blocks/form-elements/percent-pie/percent-pie.pug
  body
    +header({})
    
    main.room-details__main-wrapper
      section.room-details__image-box
        .room-details__main-image-wrapper
          img(class='room-details__main-image',  src='../../static/source/room-details-big.jpg', alt='image-big')
        .room-details__small-image-wrapper
          img(class='room-details__small-image', src='../../static/source/room-details-1.jpg', alt='room image')
          img(class='room-details__small-image', src='../../static/source/room-details-2.jpg' alt='room image')

      section.wrapper.room-details__content-wrapper
        .room-details__left
          .room-details__flex-wrapper
            .room-details__room-info
              h2.room-details__left-info-title Сведения о номере
              +room-info({})
            .room-details__pie-wrapper
              h2.room-details__left-waaay-title Впечатления от номера
              .room-details__flex-wrapper
                +percent-pie({percents: [25, 25, 50, 0]}) 
                ul.room-details__list
                  li.room-details__item.room-details__item_best Великолепно 
                  li.room-details__item.room-details__item_good Хорошо
                  li.room-details__item.room-details__item_passably Удовлетворительно 
                  li.room-details__item.room-details__item_poorly Разочарован
          .room-details__recall-wrapper
            h2.room-details__recall Отзывы посетителей номера
            .room-details__comment
              +comment({})
            .room-details__comment
              +comment({name: 'Патрисия Стёклышкова', img:'../../static/source/image-patrisia48.png', days: 7, comment: 'Обслуживание на высоте! Всё аккуратно, чисто. Завтраки в номер советую заказать, каждый день новое блюдо и десерт как комплимент'})

          .room-details__flex-wrapper.room-details__flex-wrapper--mtop
            .room-details__rools
              h2.room-details__rools-title Правила
              ul.room-details__rools-list
                li.room-details__rools-item Нельзя с питомцами
                li.room-details__rools-item Без вечеринок и мероприятий
                li.room-details__rools-item Время прибытия — после 13:00,<br>а выезд до 12:00
            .room-details__cancel
              h2.room-details__cancel-title Отмена
              p.room-details__cancel-info Бесплатная отмена в течение 48 ч. После этого при отмене не позднее чем за 5 дн. до прибытия вы получите полный возврат за вычетом сбора за услуги.

        .room-details__right
          +reserve-card({})

    +footer({})
