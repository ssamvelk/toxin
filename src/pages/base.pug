mixin meta()
  meta(charset='UTF-8')
  meta(name='viewport', content='width=device-width, initial-scale=1.0')
  meta(http-equiv='X-UA-Compatible', content='ie=edge')
  meta(name='keywords' content='Toxin, отель, отдых, UI-kit')
  meta(name='description' content='Toxin - Лучшие номера для вашей работы, отдыха и просто вдохновения. UI-kit - набор компонентов.')
  link(rel='icon', href='img/favicon.ico' type='image/ico')

<!DOCTYPE html>
html(lang='ru')
  head
    +meta
    block title
  body
    block content